<html>
  <head>
    <title>Duel Technical Test</title>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="/js/duelApp.js"></script>
  </head>

  <body ng-app="duelApp">

    <div class="row">
      <div class="col-md-8 col-md-offset-1">
        <ui-view></ui-view>
      </div>
    </div>

    <!-- Homepage template -->
    <script type="text/ng-template" id="/home.html">
      <div class="page-header">
        <h1>Duel Technical Task
      </div>

      <div class="people-header">
        <h3>Available People</h3>
      </div>

      <div ng-repeat="person in people | orderBy: 'username'" class="available-people">
        {{person.username}} - {{person.fullname}}
      </div>

    </div>

    <div class="col-md-3">

      <div class="friends-header">
        <h3>Friends List</h3>
      </div>

      <div ng-repeat="friend in friends | orderBy: 'username'" class="friends-list">
        {{friend.username}}
      </div>

    </script>

  </body>
</html>

<html>
  <head>
    <title>Duel Technical Test</title>
    <link href="/libs/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="/libs/angular/angular.min.js"></script>
    <script src="/libs/angular-ui-router/release/angular-ui-router.min.js"></script>
    <script src="/js/duelApp.js"></script>
  </head>

  <body ng-app="duelApp">

    <div class="container-fluid">


      <div class="row">
        <div class="col-xs-12">
          <ui-view></ui-view>
        </div>
      </div>

      <!-- Homepage template -->
      <script type="text/ng-template" id="/home.html">
        <div class="page-header">
          <h1>Duel Technical Task</h1>
        </div>

        <div class="col-xs-7 col-xs-offset-1">
          <div class="people-header">
            <h3>Find New Friends</h3>
          </div>

          <div ng-repeat="person in people | orderBy: 'username'" class="available-people">
            {{person.username}} - {{person.fullname}}
          </div>
        </div>
      </div>

      <div class="col-xs-3">
        <div class="friends-header">
          <h3>Friends List</h3>
        </div>

        <div ng-repeat="friend in friends | orderBy: 'username'" class="friends-list">
          {{friend.username}}
        </div>
      </div>

    </div>

      </script>

  </body>
</html>
